{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "assets/*": ["./lib/assets/*"],
      "config/*": ["./lib/config/*"],
      "ui/*": ["./lib/ui/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*", "./lib/**/*"]
}
